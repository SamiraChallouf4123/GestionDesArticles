@using Microsoft.AspNetCore.Identity
@model IEnumerable<GestionDesArticles.Models.Category>

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-add">➕ Ajouter un Categories</a>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.CategoryId">Details</a> |
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.CategoryId">Delete</a>
            </td>}
        </tr>
}
    </tbody>
</table>
